@model IEnumerable<BudgetingApp.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<!-- Categories list page -->

<div class="page-header">
    <div>
        <h1 class="h3 m-0">Categories</h1>
        <div class="text-muted small">Organize spending and budgets</div>
    </div>

    <!-- Create new category -->
    <a class="btn btn-primary" asp-action="Create">+ New Category</a>
</div>

<div class="card shadow-sm ui-card">

    <!-- Desktop table -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <!-- Category name -->
                        <td class="fw-semibold">@c.Name</td>

                        <!-- Row actions -->
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details"
                               asp-route-id="@c.CategoryId">Details</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit"
                               asp-route-id="@c.CategoryId">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete"
                               asp-route-id="@c.CategoryId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile layout -->
    <div class="d-md-none p-2">
        <div class="d-grid gap-2">
            @foreach (var c in Model)
            {
                <!-- Mobile card -->
                <div class="card ui-card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div class="fw-semibold">@c.Name</div>

                        <!-- Mobile actions -->
                        <div class="d-flex gap-2">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit"
                               asp-route-id="@c.CategoryId">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete"
                               asp-route-id="@c.CategoryId">Del</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>